{{#if editorPreview}}
	<div class="page-wrapper editor-preview" lang={{language.content}} dir={{language.contentDir}}>
		<section class='wiki-container'>
			{{outlet}}
		</section>
	</div>
{{else if fullPage}}
	{{outlet}}
{{else}}
	{{smart-banner
		isVisible=smartBannerVisible
		toggleVisibility=attrs.toggleSmartBanner
	}}

	{{#if useNewNav}}
		{{top-bar
			smartBannerVisible=smartBannerVisible
		}}
	{{else}}
		{{site-head
			smartBannerVisible=smartBannerVisible
			toggleSideNav=attrs.toggleSideNav
			toggleUserMenu=attrs.toggleUserMenu
			themeBar=themeBar
		}}
	{{/if}}

	{{#if enableSharingHeader}}
		{{share-feature
			smartBannerVisible=smartBannerVisible
			title=currentTitle
			language=language
		}}
	{{/if}}
	{{side-nav
		shouldBeVisible=sideNavVisible
		loadRandomArticle=attrs.loadRandomArticle
		toggleVisibility=attrs.toggleSideNav
		search=attrs.search
	}}
	{{user-menu
		shouldBeVisible=userMenuVisible
		toggleVisibility=attrs.toggleUserMenu
	}}
	<div class='page-wrapper' lang={{language.content}} dir={{language.contentDir}}>
		{{outlet}}
	</div>
	{{lightbox-wrapper
		type=lightboxType
		model=lightboxModel
		isVisible=lightboxVisible
		closeLightbox=attrs.closeLightbox
		setQueryParam=attrs.setQueryParam
	}}
{{/if}}
{{wikia-in-your-lang}}
{{alert-notifications alerts=alertNotifications}}
{{loading-spinner active=isLoading}}
