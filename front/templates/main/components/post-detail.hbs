<div>
	{{user-avatar
		avatarUrl=author.avatarUrl
		displayUsername=true
		profileUrl=authorUrl
		username=author.name
	}}
	<span class="timestamp">
		&bull; {{time-ago post.creationDate.epochSecond}}
	</span>
</div>
{{#if isDetailsView}}
	<div class="discussion-content">
		{{{post.rawContent}}}
	</div>
{{else}}
	<div class="discussion-content" {{action 'goToPost' postId}}>
		{{{post.rawContent}}}
	</div>
{{/if}}
<div class="row">
	{{discussion-upvote-post
		post=post
		upvote='upvote'
	}}
	{{#if isDetailsView}}
		<div class="small-5 columns end count">
			{{svg 'comments' viewBox='0 0 30 30' class='icon replies'}}
			{{replyCount}}
		</div>
	{{else}}
		<div class="small-5 columns end count" {{action 'goToPost' postId}}>
			{{svg 'comments' viewBox='0 0 30 30' class='icon replies'}}
			{{replyCount}}
		</div>
	{{/if}}
</div>
