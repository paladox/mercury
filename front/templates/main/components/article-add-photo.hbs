<header class="edit-head">
	<span {{action 'back'}}>
		{{svg 'chevron' role='img' class='icon arrow-left'}}
	</span>
	<button {{action 'upload'}} class="large publish">{{i18n 'app.add-photo-page-add-button'}}</button>

	<div class="edit-head-title">
		{{! TODO: Ideally the title would be passed to the message so translators can choose the order (see HG-663) }}
		{{i18n 'app.add-photo-page-heading'}} <span>{{model.title}}</span>
	</div>
</header>
<div class="preview-body">
	<div class="preview-container">

		<img class="preview-photo" src={{model.photoImage}} />
	</div>
	<div class="preview-input">
		<div class="photo-name">{{i18n 'app.add-photo-photo-name'}}</div>
		{{input value=model.photoName}}
		<div class="preview-instruction">{{i18n 'app.add-photo-instruction'}}</div>
	</div>
</div>
